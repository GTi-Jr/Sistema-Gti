<% if @member.errors.any? %>
<script>
    $(document).ready(function () {
        noty({text: ' <%= pluralize(@member.errors.count, "erros") %> encontrados: </br><ul><% @member.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
    });
</script>
<% end %>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <br/>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,class: "form-horizontal form-label-left",id:"demo-form2"  }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
                <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Nome *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name,  autofocus: true, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <%=f.label :email, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Email *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <%=f.label :email, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Foto de Perfil *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.file_field :avatar, class:"dropify" , 'data-default-file' => @member.avatar%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :course, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Curso *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :course, { class: "form-control" }%>
                </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for:
                <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
                <%=f.label :password , class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Senha *</span>
                <% end %>
                <i>(Deixe em branco, caso não queira mudar)</i><br/>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    <% if @minimum_password_length %>
                    <br/>
                    <em>A senha deve ter
                        <%= @minimum_password_length %>
                        caracteres no mínimo
                    </em>
                    <% end %>
                </div>
            </div>

            <div class="form-group">
                <%=f.label :password_confirmation , class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Confirmar Senha *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <%=f.label :current_password , class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Senha Atual*</span>
                <% end %>
                <i>(Nós precisamos de sua senha atual para fazer as modificações)</i><br/>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%=  f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                </div>
            </div>

            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <%= f.submit "Alterar", type:"submit", class:"btn btn-success" %>
                    <%= link_to "Voltar", members_path, class:"btn btn-primary"%>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
