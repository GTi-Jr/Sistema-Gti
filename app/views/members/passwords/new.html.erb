<div class="login_wrapper">
    <div class="animate form login_form custom-text-color">
        <section class="login_content">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <h1>Esqueceu sua senha?</h1>
            <%= devise_error_messages! %>
            <div>
                <%= f.email_field :email, autofocus: true,type:'text',class: 'form-control',placeholder: "E-mail"%>
            </div>

            <div>
                <%= f.submit "Enviar instruções de recuperação",class: 'btn btn-default submit'  %>
                <%= render "members/shared/links" %>
            </div>

            <% end %>

        </section>
    </div>
</div>
