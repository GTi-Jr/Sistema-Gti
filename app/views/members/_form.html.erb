<% if @member.errors.any? %>
<script>
    $(document).ready(function () {
        noty({text: ' <%= pluralize(@member.errors.count, "erros") %> encontrados: </br><ul><% @member.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
    });
</script>
<% end %>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <br/>
            <%= form_for @member, :html => { class:"form-horizontal form-label-left", id:"demo-form2"  } do |f| %>

            <div class="form-group">
                <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Nome *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :email, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Email *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :email, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :course, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Curso *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :course, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :join_date, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Data de entrada *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.date_field :join_date, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :role, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Cargo *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :role, value: @member.role.name , class: "form-control" %>
                </div>
            </div>

            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <%= f.submit "Cadastrar", type:"submit", class:"btn btn-success" %>
                    <%= link_to "Voltar", members_path, class:"btn btn-primary"%>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
