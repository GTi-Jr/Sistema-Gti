<% if @advertisement.errors.any? %>
  <script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@advertisement.errors.count, "erros") %> encontrados: </br><ul><% @advertisement.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
  });
  </script>
<% end %>
<div class="clearfix"></div>
 <div class="row">
   <div class="col-md-12 col-sm-12 col-xs-12">
         <div class="x_content">
            <br />
            <%= form_for @advertisement, :html => { class:"form-horizontal form-label-left", id:"demo-form2"  } do |f| %>


                <div class="form-group">
               <%= f.label :date, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
               <span class="required">Data *</span>
               <% end %>
               <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.date_field :date, :value => '2017-01-11', class: "form-control "  %>
               </div>
               </div>
               <div class="form-group">
               <%= f.label :reason, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
               <span class="required">Motivo *</span>
               <% end %>
               <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.text_field :reason, { class: "form-control" }%>
               </div>
               </div>

               <div class="form-group">
                  <%= f.label :member_id, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                  <span class="required">Membro *</span>
                  <% end %>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.select :member_id, Member.all.collect { |c| [ c.name, c.id ] }, { include_blank: true } , { class: "form-control" }%>
                  </div>
                  </div>

               <div class="ln_solid"></div>
                  <div class="form-group">
                     <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <%= f.submit "Cadastrar", type:"submit", class:"btn btn-success" %>
                        <%= link_to "Voltar", advertisements_path, class:"btn btn-primary"%>
                     </div>
                  </div>
               </div>
            <% end %>
   </div>
</div>
