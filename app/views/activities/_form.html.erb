<% if @activity.errors.any? %>
  <script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@activity.errors.count, "erros") %> encontrados: </br><ul><% @advertisement.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
  });
  </script>
<% end %>
<div class="clearfix"></div>
 <div class="row">
   <div class="col-md-12 col-sm-12 col-xs-12">
         <div class="x_content">
            <br />
            <%= form_for @activity, :html => { class:"form-horizontal form-label-left", id:"demo-form2"  } do |f| %>

            <div class="form-group">
                <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Nome *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :name, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :description, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Descrição *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :description, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :status, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Status *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :status, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :client, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Cliente *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <%= f.text_field :client, { class: "form-control" }%>
                </div>
            </div>

            <div class="form-group">
               <%= f.label :activity_type, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
               <span class="required">Tipo de Atividade *</span>
               <% end %>
               <div class="col-md-6 col-sm-6 col-xs-12">
                 <%= f.select :activity_type, ['Projeto','Curso'], { include_blank: false } , class: "form-control" %>
               </div>
               </div>



            <div class="form-group">
                <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
                <span class="required">Membros *</span>
                <% end %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <% @activity.members.each do |member| %>
                    <div class='form-control' ><%= member.name%></div><br>
                    <%end%>
                    <!-- <%= f.text_field :activity_type, { class: "form-control" }%> -->
                </div>
            </div>

               <div class="ln_solid"></div>
                  <div class="form-group">
                     <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <%= f.submit "Cadastrar", type:"submit", class:"btn btn-success" %>
                        <%= link_to "Voltar", activities_path, class:"btn btn-primary"%>
                     </div>
                  </div>
               </div>
            <% end %>
   </div>
</div>
